<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/whiteBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF">


            <RelativeLayout
                android:id="@+id/blueBackground"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="#78C4FB">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="213dp"
                    android:layout_height="68dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="33dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/loginTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="115dp"
                    android:text="@string/loginTextView"
                    android:textColor="#FFFCFC"
                    android:textSize="25dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/formLayout"
                android:layout_width="296dp"
                android:layout_height="337dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="207dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rectangle">

                <RelativeLayout
                    android:layout_width="256dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/user_password_rectangle">

                    <EditText
                        android:id="@+id/userEditText"
                        android:layout_width="183dp"
                        android:layout_height="70dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="7dp"
                        android:layout_toStartOf="@+id/userImageView"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:selectAllOnFocus="false"
                        android:singleLine="false"
                        android:text="Oliver Maikath"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/userImageView"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="210dp"
                        android:layout_marginEnd="22dp"
                        android:src="@drawable/user_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="256dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="200dp"
                    android:background="@drawable/user_password_rectangle">

                    <EditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="183dp"
                        android:layout_height="70dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:inputType="textPassword"
                        android:selectAllOnFocus="false"
                        android:singleLine="false"
                        android:text="Oliver Maikath"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/passwordImageView"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="210dp"
                        android:layout_marginEnd="22dp"
                        android:src="@drawable/password_eye" />
                </RelativeLayout>

                <Button
                    android:id="@+id/signInButton"
                    android:layout_width="262dp"
                    android:layout_height="75dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/login_button" />
            </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.LinearLayoutCompat>